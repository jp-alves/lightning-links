{
  "manifest_version": 3,
  "name": "Lightning Links - Fast New Tab",
  "version": "1.0.0",
  "description": "A minimalist, privacy-focused new tab page that loads instantly.",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/*"
  ],
  "offline_enabled": true
}